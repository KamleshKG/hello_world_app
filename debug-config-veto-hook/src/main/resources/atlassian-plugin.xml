<?xml version="1.0" encoding="UTF-8"?>
<atlassian-plugin key="com.company.bitbucket.debug-config-veto" name="Debug Config Veto Hook" plugins-version="2">
    <plugin-info>
        <description>Prevents merging PRs with debug=True in configuration files</description>
        <version>1.0.5</version>
        <vendor name="Your Company" url="https://www.yourcompany.com"/>
    </plugin-info>

    <!-- Component Import - Only ContentService -->
    <component-import key="contentService" interface="com.atlassian.bitbucket.content.ContentService"/>

    <!-- Repository Hook -->
    <repository-hook key="debug-config-veto-check" 
                     name="Debug Configuration Veto Check"
                     class="com.company.bitbucket.hook.DebugConfigVetoHook">
        <description>Blocks PR merges when debug=True is found in web.config, settings.py, appsettings.json, or .env files</description>
        
        <scopes>
            <scope>PROJECT</scope>
            <scope>REPOSITORY</scope>
        </scopes>
    </repository-hook>
</atlassian-plugin>
